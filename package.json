{
  "name": "ecommerce-qa-testsuite",
  "version": "1.0.0",
  "description": "Comprehensive QA Testing Showcase with UI, API, and Load Testing",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --config=config/playwright.config.js",
    "test:ui": "playwright test ui-tests/ --config=config/playwright.config.js",
    "test:api": "playwright test api-tests/ --config=config/playwright.config.js",
    "test:contract:consumer": "jest automated-tests/contract-tests/consumer",
    "test:contract:provider": "jest automated-tests/contract-tests/provider",
    "contract:publish": "bash scripts/contract-tests/publish-pacts.sh",
    "contract:verify": "npm run test:contract:provider",
    "contract:can-i-deploy": "bash scripts/contract-tests/can-i-deploy.sh",
    "contract:record-deployment": "bash scripts/contract-tests/record-deployment.sh",
    "test:load:k6": "node scripts/load-testing/k6-wrapper.js",
    "test:load:k6:smoke": "node scripts/load-testing/k6-wrapper.js --types smoke",
    "test:load:k6:load": "node scripts/load-testing/k6-wrapper.js --types load",
    "test:load:k6:stress": "node scripts/load-testing/k6-wrapper.js --types stress",
    "test:load:k6:spike": "node scripts/load-testing/k6-wrapper.js --types spike",
    "test:load:k6:volume": "node scripts/load-testing/k6-wrapper.js --types volume",
    "test:load:k6:advanced": "k6 run scripts/load-testing/k6-scenarios.js",
    "test:load:jmeter": "scripts/load-testing/jmeter-runner.sh --scenario load",
    "test:load:jmeter:all": "scripts/load-testing/jmeter-runner.sh --all",
    "test:load:comprehensive": "node scripts/load-testing/load-test-runner.js",
    "test:cross-browser": "playwright test --config=config/playwright.config.js --project=chromium --project=firefox --project=webkit",
    "test:mobile": "playwright test --config=config/playwright.config.js --project=mobile-chrome --project=mobile-safari",
    "report:executive": "node scripts/reporting/executive-summary.js",
    "report:performance": "node scripts/reporting/performance-report.js",
    "report:api": "node scripts/reporting/api-performance-report.js",
    "report:load": "node scripts/load-testing/load-test-runner.js --testType=all",
    "report:k6:junit:aggregate": "node scripts/load-testing/k6-aggregate-junit.js",
    "report:all": "npm run report:executive && npm run report:performance && npm run report:api",
    "demo:showcase": "node scripts/test-execution/TestExecutor.js --suite=showcase --browsers=chromium,firefox",
    "demo:load": "npm run test:load:comprehensive",
    "setup": "npm install && npx playwright install",
    "lint": "eslint --config .eslintrc.js automated-tests/ scripts/ --ext .js",
    "lint:check": "eslint --config .eslintrc.js automated-tests/ scripts/ --ext .js --max-warnings=0",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf test-results/ reports/ playwright-report/",
    "ci:test": "npm run test -- --reporter=junit",
    "ci:load": "npm run test:load:comprehensive -- --testType=smoke",
    "ci:health-check": "npm run test:api",
    "ci:monitor": "node scripts/ci/monitor.js",
    "test:ci:smoke": "playwright test automated-tests/ui-tests/smoke.spec.js --config=config/playwright.config.js --project=chromium",
    "test:api:comprehensive": "npm run test:api",
    "test:performance:advanced": "npm run report:performance",
    "test:security": "playwright test security-tests/ --config=config/playwright.config.js",
    "security:zap": "bash scripts/security/run-zap-af.sh",
    "security:zap:auth": "ZAP_AUTH_METHOD=form bash scripts/security/run-zap-af.sh",
    "security:zap:script-auth": "ZAP_AUTH_METHOD=script ZAP_AUTH_SCRIPT=scripts/security/zap-auth-scripts/form-auth.js bash scripts/security/run-zap-af.sh",
    "test:aggregate": "node scripts/reporting/aggregate.js",
    "test:unit": "jest scripts/load-testing/__tests__/jmeter-jtl-parser.spec.js",
    "report:consolidated": "node scripts/reporting/consolidated-report.js",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "qa",
    "testing",
    "playwright",
    "k6",
    "jmeter",
    "load-testing",
    "performance",
    "automation",
    "e-commerce",
    "showcase"
  ],
  "author": "QA Engineer",
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@playwright/test": "^1.40.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^8.50.0",
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-pact": "^0.11.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2",
    "@axe-core/playwright": "^4.10.2"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "tdigest": "^0.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusufakajose/EcommerceQA-TestSuite.git"
  },
  "bugs": {
    "url": "https://github.com/yusufakajose/EcommerceQA-TestSuite/issues"
  },
  "homepage": "https://github.com/yusufakajose/EcommerceQA-TestSuite#readme"
}
