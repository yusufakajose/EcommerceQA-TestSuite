{
  "name": "ecommerce-qa-testsuite",
  "version": "1.0.0",
  "description": "A comprehensive QA testing suite demonstrating professional testing practices for e-commerce web applications",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/run-tests.js",
    "test:ui": "playwright test --config=config/playwright.config.js",
    "test:ui:headed": "playwright test --config=config/playwright.config.js --headed",
    "test:ui:debug": "playwright test --config=config/playwright.config.js --debug",
    "test:ui:demo": "playwright test --config=config/playwright.config.js page-object-framework-demo.spec.js",
    "test:ui:dev": "TEST_ENV=development playwright test --config=config/playwright.config.js",
    "test:ui:staging": "TEST_ENV=staging playwright test --config=config/playwright.config.js",
    "test:ui:prod": "TEST_ENV=production playwright test --config=config/playwright.config.js",
    "test:ui:mobile": "playwright test --config=config/playwright.config.js --project='Mobile*'",
    "test:ui:desktop": "playwright test --config=config/playwright.config.js --project='Desktop*'",
    "test:ui:chrome": "playwright test --config=config/playwright.config.js --project='*Chrome*'",
    "test:ui:brave": "playwright test --config=config/playwright.config.js --project='Brave Browser'",
    "test:ui:firefox": "playwright test --config=config/playwright.config.js --project='*Firefox*'",
    "test:ui:safari": "playwright test --config=config/playwright.config.js --project='*Safari*'",
    "test:api": "node scripts/api-tests/run-newman.js run complete-suite development",
    "test:api:dev": "node scripts/api-tests/run-newman.js run complete-suite development --reporters cli,htmlextra",
    "test:api:staging": "node scripts/api-tests/run-newman.js run complete-suite staging --reporters cli,htmlextra",
    "test:api:prod": "node scripts/api-tests/run-newman.js run complete-suite production --reporters cli,htmlextra",
    "test:api:users": "node scripts/api-tests/run-newman.js run user-management development --data config/postman/data/users.csv --iterations 3",
    "test:api:products": "node scripts/api-tests/run-newman.js run product-catalog development --data config/postman/data/products.csv --iterations 5",
    "test:api:orders": "node scripts/api-tests/run-newman.js run order-processing development --data config/postman/data/orders.csv --iterations 3",
    "test:api:auth": "node scripts/api-tests/run-newman.js run auth-workflow development",
    "test:api:newman": "newman run config/postman/collections/ecommerce-api-complete.postman_collection.json -e config/postman/environments/development.postman_environment.json",
    "test:api:all": "node scripts/api-tests/api-test-runner.js all development",
    "test:api:all:staging": "node scripts/api-tests/api-test-runner.js all staging",
    "test:api:all:prod": "node scripts/api-tests/api-test-runner.js all production",
    "test:api:data-driven": "node scripts/api-tests/api-test-runner.js data-driven user-management development users",
    "test:api:multiple": "node scripts/api-tests/api-test-runner.js multiple user-management,product-catalog,order-processing development",
    "test:api:regression": "node scripts/api-tests/api-test-runner.js multiple complete-suite staging --reporters cli,htmlextra,json",
    "test:api:validate": "node scripts/api-tests/validate-setup.js",
    "test:api:comprehensive": "node scripts/api-tests/comprehensive-test-runner.js comprehensive development",
    "test:api:comprehensive:staging": "node scripts/api-tests/comprehensive-test-runner.js comprehensive staging",
    "test:api:comprehensive:prod": "node scripts/api-tests/comprehensive-test-runner.js comprehensive production",
    "test:api:security": "node scripts/api-tests/comprehensive-test-runner.js security development",
    "test:api:negative": "node scripts/api-tests/comprehensive-test-runner.js negative development",
    "test:api:performance": "node scripts/api-tests/comprehensive-test-runner.js performance development --include-performance",
    "test:api:coverage": "node scripts/api-tests/comprehensive-test-runner.js coverage development",
    "test:performance": "echo \"JMeter tests - run manually or via CI/CD\"",
    "test:all": "node scripts/run-tests.js",
    "test:all:dev": "node scripts/run-tests.js -e development",
    "test:all:staging": "node scripts/run-tests.js -e staging",
    "test:all:prod": "node scripts/run-tests.js -e production",
    "test:cross-browser": "node scripts/run-tests.js -b chromium,firefox,webkit",
    "test:parallel": "node scripts/run-tests.js -w 8",
    "test:smoke": "node scripts/run-tests.js -p \"**/*smoke*\"",
    "test:regression": "node scripts/run-tests.js -e staging,production -b chromium,firefox",
    "report:open": "playwright show-report",
    "report:open:dev": "playwright show-report reports/test-execution/development/playwright-report",
    "report:open:staging": "playwright show-report reports/test-execution/staging/playwright-report",
    "report:comprehensive": "node scripts/reporting/generate-report.js",
    "report:dashboard": "open reports/comprehensive/dashboard.html",
    "install:browsers": "playwright install",
    "clean:reports": "rm -rf reports/* test-results/*",
    "clean:screenshots": "rm -rf automated-tests/ui-tests/screenshots/*",
    "setup:test-env": "node scripts/setup-test-environment.js",
    "ci:aggregate": "node scripts/ci/aggregate-results.js"
  },
  "keywords": [
    "qa",
    "testing",
    "automation",
    "playwright",
    "newman",
    "postman",
    "jmeter",
    "e-commerce",
    "test-suite"
  ],
  "author": "QA Testing Showcase",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.23.0",
    "axe-core": "^4.8.0",
    "@axe-core/playwright": "^4.8.0"
  },
  "dependencies": {
    "nodemailer": "^6.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}